{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/(.*)",
      "dest": "client/dist/$1"
    }
  ],
  "env": {
    "POLYGON_API_KEY": "@polygon-api-key",
    "CHARTSWATCHER_USER_ID": "@chartswatcher-user-id",
    "CHARTSWATCHER_API_KEY": "@chartswatcher-api-key",
    "CHARTSWATCHER_CONFIG_ID": "@chartswatcher-config-id"
  }
}
